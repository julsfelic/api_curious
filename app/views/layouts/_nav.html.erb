<header class="masthead clearfix">
  <div class="inner">
    <h3 class="masthead-brand">
      <%= link_to "Synoptix", root_path %>
    </h3>
    <% if current_user %>
      <nav>
        <ul class="nav masthead-nav">
          <li>
            <small>Welcome, <%= current_user.screen_name %>!</small>
          </li>
          <li>
            <%= link_to "My Weather", dashboard_path %>
          </li>
          <li>
            <%= link_to "Log out", logout_path, method: :delete %>
          </li>
        </ul>
      </nav>
    <% end %>
  </div>

  <%= render partial: "layouts/flash" %>
</header>
