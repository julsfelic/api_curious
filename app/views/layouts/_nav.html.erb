<header class="masthead clearfix">
  <div class="inner">
    <h3 class="masthead-brand">
      <%= link_to "Cyclogenesis", root_path %>
    </h3>
      <nav>
        <ul class="nav masthead-nav">
          <% if current_user %>
            <li>
              <small>Welcome, <%= current_user.screen_name %>!</small>
            </li>
            <li>
              <%= link_to "My Weather", dashboard_path %>
            </li>
            <li>
              <%= link_to "Log out", logout_path, method: :delete %>
            </li>
          <% end %>
          <li><%= link_to "Search for weather", new_weather_path %></li>
        </ul>
      </nav>
  </div>

  <%= render partial: "layouts/flash" %>
</header>
